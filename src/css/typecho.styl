
$scheme    = hexo-config('scheme') ? hexo-config('scheme') : 'Muse';

$variables = base $scheme;

// Variables Layer
// --------------------------------------------------
for $variable in $variables
  @import "_variables/" + $variable;

// Mixins Layer
// --------------------------------------------------
@import "_mixins.styl";

// 兼容分页样式
@import "_typecho/pagination.styl";

.header-inner {
  +tablet-desktop() {
    // 原 padding: 20px 0;
    padding: 40px 0;
  }
}

.site-nav {
  +tablet-desktop() {
    display: flex;
    justify-content: space-between;
    align-items: center;
    .menu-left {
      margin-left: 20px;
    }
  }

  +mobile() {
    margin-top: 8px;
    border-top: 1px solid #eee;
    padding: 4px 10px 0;

    // 导航条链接
    .menu-item a {
      margin-top: 5px;
      padding: 5px 10px;
    }
  }

  // 搜索框
  .site-search {
    +mobile() {
      margin-top: 5px;
      padding: 5px 10px;
    }
    input {
      width: 140px;
      padding: 3px;
      padding-left: 18px;
      border: none;
      border-radius: 0;
      border-bottom: 1px solid #999;
      background: url("data:image/svg+xml;base64,") no-repeat 0 50%;
      background-size: 12px 12px;
      outline: none;
      font-size: 14px;
      opacity: 0.5;
      &:focus {
        opacity: 1;
      }
    }
  }
}
